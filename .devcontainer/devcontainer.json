{
    "name": "PHP Web Dev Environment",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "felixfbecker.php-debug",
                "bmewburn.vscode-intelephense-client"
            ]
        }
    },
    "forwardPorts": [80],
    "postCreateCommand": "sudo chown -R vscode:vscode /workspace",
    "remoteUser": "vscode",
    "features": {
        "ghcr.io/devcontainers/features/php:1": {}
    }
}
