{
    "name": "PHP Web Dev Environment",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "felixfbecker.php-debug",
                "bmewburn.vscode-intelephense-client",
                "evilz.vscode-unfold"
            ]
        }
    },
    "forwardPorts": [80],
    "postCreateCommand": "composer install",
    "remoteUser": "vscode"
}